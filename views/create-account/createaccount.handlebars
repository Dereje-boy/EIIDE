<link rel="stylesheet" href="../index.css">
<link rel="stylesheet" href="style/create-account.css">

<!-- Main Content Area -->
<div class="container">
    <div class="account-form-container">
        <h2>Create New Account</h2>

        <div id="form-message" class="form-message"></div>

        <form id="createAccountForm">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" class="form-control" required minlength="4"
                    maxlength="50">
                <div class="validation-error" id="username-error"></div>
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" class="form-control" required minlength="8">
                <div class="validation-error" id="password-error"></div>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password:</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
                <div class="validation-error" id="confirmPassword-error"></div>
            </div>

            <div class="form-group">
                <label for="accountType">Account Type:</label>
                <select id="accountType" name="accountType" class="form-control" required>
                    <option value="customer" selected>Customer</option>
                    <option value="employee">Employee</option>
                    <option value="admin">Administrator</option>
                </select>
                <p>Admin Only Can Create Admin and Employee Type Account</p>
                <div class="validation-error" id="accountType-error"></div>
            </div>

            <button type="submit" class="btn btn-block">Create Account</button>
        </form>

        <div class="login-link">
            Already have an account? <a href="/login">Login here</a>
        </div>
    </div>
</div>

<script src="/script/creata-account/script.js"></script>